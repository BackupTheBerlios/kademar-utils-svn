#!/bin/sh
# postrm script for kademar-base-desktop
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        [ -L /usr/kademar ] && rm -f /usr/kademar

        if [ remove = "$1" ]; then
		#Remove splashy config
                rm -f /etc/splashy/config.xml

                dpkg-divert --package kademar-base-desktop --remove --divert /etc/splashy/config.xml.orig --rename /etc/splashy/config.xml

		#Remove splashy config
                rm -f /etc/splash/splash
                dpkg-divert --package kademar-base-desktop --remove --divert /etc/splash/splash.orig --rename /etc/splash/splash

		#Remove libao pulse config
                rm -f /etc/libao.conf
                dpkg-divert --package kademar-base-desktop --remove --divert /etc/libao.conf.orig --rename /etc/libao.conf

        fi

    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


