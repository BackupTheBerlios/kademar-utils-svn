#!/bin/bash

cd /tmp
wget http://www.kademar.org/ip.php >/dev/null 2>&1 ; result=$?
if [ "$result" != "0" ]; then
	echo "Necessito connexió a internet"
	echo "Necesito conexión a internet"
	echo "Need internet conection"
	exit 1
fi
echo -n "IP: "
cat ip.php
echo
rm -f index.html
