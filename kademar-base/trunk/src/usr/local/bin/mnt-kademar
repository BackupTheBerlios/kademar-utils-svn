#!/bin/bash
#
# Creat per Adonay Sanz per la kademar - 1 oct 2005
# Modificat 14 abr 09 - auto    ntfsfix
#


dispositius=`ls /mnt --ignore=cdrom* --ignore=fd* --ignore=dvd* --ignore=disquet* --ignore=live* 2>/dev/null`

if [ -n "$dispositius" ]; then
	for i in $dispositius
	do
	#Munta'l i si falla, muntal com a NTFS (si ha fallat, solament pot ser un NTFS-3G que al no estar CLEAN, no el munta
		[ -z "`grep $i /proc/mounts`" ] && mount /mnt/$i || umount /mnt/$i ; ntfsfix /dev/$i ; mount /mnt/$i || mount -t ntfs /dev/$i /mnt/$i -o gid=users,umask=0000,nls=iso8859-1 2>/dev/null >&2
	done
fi
