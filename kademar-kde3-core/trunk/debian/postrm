#                 if [ -e /usr/share/apps/kicker/pics/kside.png-orig ]; then
#                         rm /usr/share/apps/kicker/pics/kside.png
#                 fi
#                 if [ -e /etc/kde3/kdm/kdmrc.orig ]; then
