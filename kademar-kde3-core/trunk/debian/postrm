                dpkg-divert --package kademar-kde3-core --remove --divert /usr/share/apps/kicker/pics/kside.png-orig --rename /usr/share/apps/kicker/pics/kside.png
                dpkg-divert --package kademar-kde3-core --remove --divert /etc/kde3/kdm/kdmrc.orig --rename /etc/kde3/kdm/kdmrc
                dpkg-divert --package kademar-kde3-core --remove --divert /etc/kde3/kdm/backgroundrc.orig --rename /etc/kde3/kdm/backgroundrc
