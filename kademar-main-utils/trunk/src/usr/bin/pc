#!/bin/bash

# Adonay Sanz Alsina - 6 oct 2010
# GPL 3.0 or higher

if [ -e /Pc ]; then

	#KDE4
	if [ "$KDE_SESSION_VERSION" = 4 ]; then
		dolphin /Pc &
		found=ok
	fi

	#KDE3
	if [ -z "$found" -a "$DESKTOP_SESSION" = "kde3" ]; then
		konqueror /Pc &
		found=ok
	fi 

	#else, let xdg freedesktop select what it's better
	[ -z "$found" ] && xdg-open /Pc &

fi
