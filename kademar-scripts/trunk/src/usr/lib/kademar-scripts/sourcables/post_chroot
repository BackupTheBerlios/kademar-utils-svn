
#Borrem el /etc/hosts del live-cd agafat abans del sistema amfitrió  i restaurem el del live-cd original
rm -f etc/hosts
[ -e etc/hosts.bak ] && mv etc/hosts.bak etc/hosts

#Fstab - pirula
rm -fr $BURNIX_ROOT/etc/fstab
mv $BURNIX_ROOT/etc/fstab.bak $BURNIX_ROOT/etc/fstab

#/dev pirula
rm -fr dev
mv dev.old dev

#Desmuntem /sys
umount sys

#Borrem el /etc/resolv.conf del live-cd agafat abans del sistema amfitrió  i restaurem el del live-cd original, en el cas de que l'hàgim modificat abans
if [ -h etc/resolv.conf.bak ]; then
  rm -f etc/resolv.conf
  mv etc/resolv.conf.bak etc/resolv.conf
fi

#Borrem el /etc/apt/sources.list del live-cd agafat abans del sistema amfitrió  i restaurem el del live-cd original, en el cas de que les hàgim modificat abans
if [ -e etc/apt/sources.list.bak ]; then
  rm -f etc/apt/sources.list
  mv etc/apt/sources.list.bak etc/apt/sources.list
fi

if [ ! -z "$APT_CACHER_URL" ] ; then
	sed -i "s,http://.*:3142/,http://,g" $BURNIX_ROOT/etc/apt/sources.list
fi

#If it found a start-stop-daemon.REAL, delete start-stop-daemon, and rename start-stop-daemon.REAL; because, if we don't do it, it will fail on boot process
if [ -e $BURNIX_ROOT/sbin/start-stop-daemon.REAL ]; then
  [ -e $BURNIX_ROOT/sbin/start-stop-daemon ] && rm -f $BURNIX_ROOT/sbin/start-stop-daemon
  mv $BURNIX_ROOT/sbin/start-stop-daemon.REAL $BURNIX_ROOT/sbin/start-stop-daemon
fi

umount -l proc

umount -l common && rm -r common || exit 13

#umount dev || exit 7

umount -l var/cache/apt/archives || exit 10

#Borrem la configuració de X
rm -f $BURNIX_ROOT/etc/X11/xorg.conf
rm -f $BURNIX_ROOT/etc/X11/XF86Config-4


#leave apt/lists of live-cd filesystem unmodified and empty
rm -f $BURNIX_ROOT/var/lib/apt/lists/* 2>/dev/null
rm -f $BURNIX_ROOT/var/lib/apt/lists/partial/* 2>/dev/null
touch $BURNIX_ROOT/var/lib/apt/lists/lock


#Delete Openoffice2 Lock Files
rm -f $BURNIX_ROOT/home/*/.openoffice.org2/.lock

#Xfont X.org antialiases
if [ -z "`grep antialias /etc/X11/Xresources/x11-common 2>/dev/null`" ]; then
	echo "
Xft.antialias: 1
Xft.dpi:90
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.rgba: rgb " >> /etc/X11/Xresources/x11-common
fi

ok "Done"

