post_install(){
check_ntp_user
}

post_upgrade(){
check_ntp_user
}

check_ntp_user(){
    if [ -z "`grep -iR ntp /etc/group`" ]; then
        echo " * Preparing NTP user & group"
        groupadd ntp
        useradd -r -d /var/lib/ntp -g ntp -s /bin/false ntp
        [ ! -e /var/lib/ntp ] && mkdir -p /var/lib/ntp
        chown -R ntp:ntp /var/lib/ntp
    fi
}