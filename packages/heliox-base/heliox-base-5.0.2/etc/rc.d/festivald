#!/bin/bash

. /etc/rc.conf
. /etc/rc.d/functions

PID=$(pidof -o %PPID /usr/bin/festival)
case "$1" in
  start)
    stat_busy "Starting Festival Daemon"
    [ -z "$PID" ] && (/usr/bin/festival --server & ) > /dev/null
    if [ $? -gt 0 ]; then
      stat_fail
    else
      add_daemon festival
      stat_done
    fi
    ;;
  stop)
    stat_busy "Stopping Festival Daemon"
    [ ! -z "$PID" ] && kill $PID &> /dev/null
    if [ $? -gt 0 ]; then
      stat_fail
    else
      rm_daemon festival
      stat_done
    fi
    ;;
  restart)
    $0 stop
    sleep 1
    $0 start
    ;;
  *)
    echo "usage: $0 {start|stop|restart}"
esac

exit 0
