#!/bin/bash

PID=$(pidof -o %PPID /usr/bin/festival)
case "$1" in
  start)
    [ -z "$PID" ] && (/usr/bin/festival --server & ) > /dev/null
    ;;
  stop)
    [ ! -z "$PID" ] && kill $PID &> /dev/null
    ;;
  restart)
    $0 stop
    sleep 1
    $0 start
    ;;
  *)
    echo "usage: $0 {start|stop|restart}"
esac

exit 0
